generator client {
  provider = "prisma-client-js"
  output   = "./dist"
}

datasource db {
  //provider = "mysql"
  //url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id              String         @id @default(uuid())
  email           String         @unique
  passwordHash    String
  name            String?
  isEmailVerified Boolean        @default(false)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}