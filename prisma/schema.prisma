generator client {
  provider = "prisma-client-js"
  output   = "./dist"
}

datasource db {
  //provider = "mysql"
  //url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  passwordHash    String
  name            String?
  isEmailVerified Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  beers           Beer[]   @relation("UserBeers")
  ratings         Rating[]
}

model Beer {
  id          String   @id @default(uuid())
  userId      String
  name        String
  description String?
  createdBy   User     @relation("UserBeers", fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  ratings     Rating[]
  averageRate Float?   @default(0)
}

model Rating {
  id        String   @id @default(uuid())
  score     Float
  comment   String?
  createdAt DateTime @default(now())

  beer   Beer   @relation(fields: [beerId], references: [id])
  beerId String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@unique([beerId, userId])
}
